{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "strict": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true
  },
  "include": [
    "./plugins/**/*.ts",
    "./libraries/**/*.ts"
  ]
}