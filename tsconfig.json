{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "strict": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true
  },
  "include": [
    "./plugins/**/*.ts",
    "./libraries/**/*.ts"
  ]
}